f = open('27-a.txt').readline()
n = int(f)
s = 0
minr = 999999999999
for line in f:
    a, b = line.split()[0], line.split()[1]  # 6, 7  lines can be replaced with map method
    a, b = int(a), int(b)
    maxx = max(a, b)
    minn = min(a, b)

    s += abs(a-b)  # s += maxx
    if (maxx-minn) % 3 != 0:
        minr = min(minr, maxx-minn)
if s % 3 != 0:
    print(s)
else:
    print(s-minr)
